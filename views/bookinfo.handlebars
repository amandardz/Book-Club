<div class="card my-3 mb-3">
    <div class="col-2">
      <img src="{{books.thumbnail}}" alt="book image"> 
    </div>
    <div class="col-9">
      <div class="card-body text-center">
        <h4 class="card-title">Book Title: {{books.title}}</h4>
        <p class="card-text">Book Description: {{books.description}}</p>
        <p>Number of reviews: {{reviews.length}}</p>
      </div>
    </div>
</div>

<form class="container-fluid form">
  <div class="input-group">
    <textarea class="form-input" id="review-content" name="review-content" placeholder="Post a review"></textarea>
    <button type="submit" class="btn btn-primary">Post</button>
  </div>
</form>

